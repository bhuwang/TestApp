<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bhuwan.testapp.database.SaveToFileActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoToSave"
        android:layout_marginTop="30dp"
        android:width="350dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addToFileButton"
        android:layout_below="@+id/infoToSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addToFile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deleteFromFileButton"
        android:layout_alignTop="@+id/addToFileButton"
        android:layout_alignRight="@+id/infoToSave"
        android:layout_alignEnd="@+id/infoToSave"
        android:onClick="deleteFromFile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Display all the info here..."
        android:id="@+id/displayInfoTextView"
        android:layout_below="@+id/addToFileButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />
</RelativeLayout>
