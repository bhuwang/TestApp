<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/prisha">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/display_top_text_here"
        android:id="@+id/bottomTopMemeText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/display_bottom_text_here"
        android:id="@+id/bottomBottomMemeText"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bottomTopMemeText"
        android:layout_alignStart="@+id/bottomTopMemeText"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal" />
</RelativeLayout>